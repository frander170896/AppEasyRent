<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/amInquilino"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:hint="@string/Inquilino"
            android:textColorHint="#05ab9a"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="20dp"
            >
        </com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/amDepartamento"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:hint="Depertamento"
            android:textColorHint="#05ab9a"
            android:layout_marginTop="51dp"
            android:layout_below="@+id/amInquilino"
            android:layout_alignLeft="@+id/amInquilino"
            android:layout_alignStart="@+id/amInquilino">
        </com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtPrecio"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/amDepartamento"
            android:layout_alignLeft="@+id/amDepartamento"
            android:layout_alignStart="@+id/amDepartamento"
            android:layout_alignRight="@+id/amDepartamento"
            android:layout_alignEnd="@+id/amDepartamento">

            <EditText
                android:id="@+id/edtPrecio"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Precio"
                android:enabled="false"
                android:inputType="number"
                android:layout_below="@+id/edtPrecio"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="101dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="74dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/Cobrar"
            android:textColor="@color/white"
            android:layout_below="@+id/txtPrecio"
            android:layout_alignRight="@+id/txtPrecio"
            android:layout_alignEnd="@+id/txtPrecio"
            android:layout_alignLeft="@+id/txtPrecio"
            android:layout_alignStart="@+id/txtPrecio"></Button>
    </RelativeLayout>
</ScrollView>
