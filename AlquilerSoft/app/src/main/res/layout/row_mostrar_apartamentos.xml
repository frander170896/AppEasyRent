<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/imgApartamento"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
        />
        <RelativeLayout
            android:id="@+id/containerDisponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgApartamento"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/lbDisponibilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/txtDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_toRightOf="@+id/lbDisponibilidad"
                android:layout_marginLeft="3dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/containerCapacidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgApartamento"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/containerDisponibilidad">

            <TextView
                android:id="@+id/lbCapacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacidad:"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/txtCapacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_toRightOf="@+id/lbCapacidad"
                android:layout_marginLeft="3dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/containerPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgApartamento"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/containerCapacidad">

            <TextView
                android:id="@+id/lbPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textView"
                android:layout_toRightOf="@+id/lbPrecio"
                android:layout_marginLeft="3dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/containerApartamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgApartamento"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/containerPrecio">

            <TextView
                android:id="@+id/lbnumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartamento:"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/txtNumeroD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_toRightOf="@+id/lbnumero"
                android:layout_marginLeft="3dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/containerUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/imgApartamento">

            <TextView
                android:id="@+id/lbUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación:"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/txtUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_toRightOf="@+id/lbUbicacion"
                android:layout_marginLeft="3dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/containerDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/containerUbicacion">

            <TextView
                android:id="@+id/lbDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción:"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/txtDescipcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_toRightOf="@+id/lbDescripcion"
                android:layout_marginLeft="3dp"
                />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>