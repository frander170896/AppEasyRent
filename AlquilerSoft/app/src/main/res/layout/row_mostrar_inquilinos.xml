<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:layout_alignTop="@+id/imgFoto"
        android:layout_toRightOf="@+id/imgFoto"
        android:layout_toEndOf="@+id/imgFoto" />

    <ImageView
        android:id="@+id/imgTelefono"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/sym_action_call"
        android:layout_alignTop="@+id/txtNombre"
        android:layout_toRightOf="@+id/txtNombre"
        android:layout_toEndOf="@+id/txtNombre"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/txtNumero"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/imgTelefono"
        android:layout_toRightOf="@+id/imgFoto"
        android:layout_toEndOf="@+id/imgFoto" />
</RelativeLayout>