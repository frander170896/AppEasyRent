<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/amSpnLugares"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="20dp"
            android:hint="Lugar"
            android:textColorHint="#05ab9a"></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtPrecio"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button"
            android:layout_alignLeft="@+id/amSpnLugares"
            android:layout_alignRight="@+id/button"
            android:layout_alignStart="@+id/amSpnLugares"
            android:layout_below="@+id/amSpnLugares"
            android:layout_marginTop="34dp">

            <EditText
                android:id="@+id/edtPrecio"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtCapacidad"
                android:layout_marginTop="42dp"
                android:ems="10"
                android:hint="Precio Alquiler"
                android:inputType="number" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtNumeroApartamento"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtPrecio"
            android:layout_alignLeft="@+id/txtPrecio"
            android:layout_alignRight="@+id/txtPrecio"
            android:layout_alignStart="@+id/txtPrecio"
            android:layout_below="@+id/txtPrecio"
            android:layout_marginTop="28dp">

            <EditText
                android:id="@+id/edtNumeroApartamento"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtPrecio"
                android:layout_marginTop="101dp"
                android:ems="10"
                android:hint="Numero Apartamento"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtCapacidad"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtNumeroApartamento"
            android:layout_alignLeft="@+id/amSpnEstado"
            android:layout_alignRight="@+id/txtNumeroApartamento"
            android:layout_alignStart="@+id/amSpnEstado"
            android:layout_below="@+id/txtNumeroApartamento"
            android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/edtCapacidad"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtNumeroApartamento"
                android:layout_marginTop="134dp"
                android:ems="10"
                android:hint="Capacidad"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/amSpnEstado"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="350dp"
            android:hint="Estado"
            android:textColorHint="#05ab9a"></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/amSpnEstado"
            android:layout_alignLeft="@+id/amSpnEstado"
            android:layout_alignRight="@+id/amSpnEstado"
            android:layout_alignStart="@+id/amSpnEstado"
            android:layout_below="@+id/amSpnEstado"
            android:layout_marginTop="43dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="Crear"
            android:textColor="@color/white"></Button>
    </RelativeLayout>
</ScrollView>
