<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/divNombreApartamento"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="8dp" />

                <EditText
                    android:id="@+id/edtNombre"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="40dp" />
                ></android.support.constraint.ConstraintLayout>


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/divDescripcion"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@+id/divNombreApartamento"
            android:layout_alignLeft="@+id/divNombreApartamento"
            android:layout_alignStart="@+id/divNombreApartamento">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDescripcion"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="8dp" />

                <EditText
                    android:id="@+id/edtDescripcion"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="40dp" />
                ></android.support.constraint.ConstraintLayout>


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/divCantidadPersonas"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@+id/divDescripcion"
            android:layout_alignLeft="@+id/divDescripcion"
            android:layout_alignStart="@+id/divDescripcion">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCantidadPersonas"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de Personas"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="8dp" />

                <EditText
                    android:id="@+id/edtCantidadPersonas"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="40dp" />
                ></android.support.constraint.ConstraintLayout>


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/divDireccion"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@+id/divCantidadPersonas"
            android:layout_alignLeft="@+id/divCantidadPersonas"
            android:layout_alignStart="@+id/divCantidadPersonas">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDireccion"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="8dp" />

                <EditText
                    android:id="@+id/edtDireccion"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="40dp" />
                ></android.support.constraint.ConstraintLayout>


        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
        android:id="@+id/divLongitud"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/divDireccion"
        android:layout_alignLeft="@+id/divDireccion"
        android:layout_alignStart="@+id/divDireccion">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtLongitud"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Longitud"
                android:textSize="20dp"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="8dp" />

            <EditText
                android:id="@+id/edtLongitud"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />
            ></android.support.constraint.ConstraintLayout>


    </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/divLatitud"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_below="@+id/divLongitud"
            android:layout_alignLeft="@+id/divLongitud"
            android:layout_alignStart="@+id/divLongitud">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtLatitud"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Latitud"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="8dp" />

                <EditText
                    android:id="@+id/edtLatitud"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="40dp" />
                ></android.support.constraint.ConstraintLayout>


        </android.support.design.widget.TextInputLayout>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/amSpnProvincia"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:hint="Provincia"
            android:textColorHint="#05ab9a"
            android:layout_below="@+id/divLatitud"
            android:layout_alignLeft="@+id/divLatitud"
            android:layout_alignStart="@+id/divLatitud"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/amSpnCanton"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:hint="Cantón"
            android:textColorHint="#05ab9a"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/amSpnDFistrito"
            android:layout_alignLeft="@+id/amSpnDFistrito"
            android:layout_alignStart="@+id/amSpnDFistrito"></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/amSpnDFistrito"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:hint="Distrito"
            android:textColorHint="#05ab9a"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/amSpnProvincia"
            android:layout_alignLeft="@+id/amSpnProvincia"
            android:layout_alignStart="@+id/amSpnProvincia"></com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/divImagen"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/amSpnCanton"
        android:layout_alignLeft="@+id/amSpnCanton"
        android:layout_alignStart="@+id/amSpnCanton"
        android:layout_marginTop="11dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtImagen"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Imagen"
                android:textSize="20dp"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="8dp" />

            <EditText
                android:id="@+id/edtImagen"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />
            ></android.support.constraint.ConstraintLayout>


    </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:text="Crear"
            android:textColor="@color/white"

            android:layout_below="@+id/divImagen"
            android:layout_alignLeft="@+id/divImagen"
            android:layout_alignStart="@+id/divImagen"></Button>

    </RelativeLayout>
</ScrollView>
